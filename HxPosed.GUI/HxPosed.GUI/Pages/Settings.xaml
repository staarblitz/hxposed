<Page x:Class="HxPosed.GUI.Pages.Settings"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HxPosed.GUI.Pages"
      mc:Ignorable="d" 
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:ctrls="clr-namespace:HxPosed.GUI.Controls"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Settings">

    <StackPanel Orientation="Vertical" Margin="20">
        <ui:CardExpander Icon="{ui:SymbolIcon Shield24}">
            <ui:CardExpander.Header>
                <ctrls:CardControl Subtitle="Configure anti-abuse for HxPosed" Header="Protection Settings"/>
            </ui:CardExpander.Header>
            <StackPanel>
                <ui:CardAction Icon="{ui:SymbolIcon ShieldKeyhole24}" Click="CardAction_Click">
                    <ctrls:CardControl Header="Caller Protection" Subtitle="Manage which applications can use HxPosed"/>
                </ui:CardAction>
                <ui:CardControl Icon="{ui:SymbolIcon WindowShield24}">
                    <ui:CardControl.Header>
                    <ctrls:CardControl Header="Tamper Protection" Subtitle="Protect HxPosed settings from being tampered"/>
                    </ui:CardControl.Header>
                    <ui:ToggleSwitch IsChecked="{Binding TamperProtectionEnabled, Mode=TwoWay}"/>
                </ui:CardControl>
            </StackPanel>
        </ui:CardExpander>
    </StackPanel>
</Page>
