<Page x:Class="HxPosed.GUI.Pages.CallerProtectionSettings"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HxPosed.GUI.Pages"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:ctrls="clr-namespace:HxPosed.GUI.Controls"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CallerProtectionSettings">
    <StackPanel Orientation="Vertical" Margin="20">
        <ui:CardControl Icon="{ui:SymbolIcon ShieldKeyhole24}">
            <ui:CardControl.Header>
                <ctrls:CardControl Header="Enable Caller Verification" Subtitle="Only allow verified processes to make VMCALLs"/>
            </ui:CardControl.Header>
            <ui:ToggleSwitch IsChecked="{Binding CallerVerificationEnabled, Mode=TwoWay}"/>
        </ui:CardControl>
        <ui:CardExpander Icon="{ui:SymbolIcon AppsAddIn24}">
            <ui:CardExpander.Header>
                <ctrls:CardControl Header="Add New" Subtitle="Allow a new application to use HxPosed. Requires restart."/>
            </ui:CardExpander.Header>
            <StackPanel>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <ui:TextBox x:Name="txtFilePath" Margin="0,0,5,0" PlaceholderText="Path to application" HorizontalAlignment="Stretch"/>
                    <ui:Button Grid.Column="1" HorizontalAlignment="Stretch" Click="Button_Click_1">...</ui:Button>
                </Grid>
                <ui:Button Appearance="Primary" HorizontalAlignment="Right" Margin="5" Click="Button_Click">Allow</ui:Button>
            </StackPanel>
        </ui:CardExpander>

        <ui:ListView x:Name="callersList" Margin="0,8,0,0" ItemsSource="{Binding VerifiedCallers}">
            <ui:ListView.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Delete" Click="MenuItem_Click"/>
                </ContextMenu>
            </ui:ListView.ContextMenu>
            <ui:ListView.ItemTemplate>
                <DataTemplate>
                    <TextBlock Margin="8,4" Text="{Binding FilePath}"/>
                </DataTemplate>
            </ui:ListView.ItemTemplate>
        </ui:ListView>
    </StackPanel>
</Page>
