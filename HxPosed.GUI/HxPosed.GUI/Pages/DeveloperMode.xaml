<Page x:Class="HxPosed.GUI.Pages.DeveloperMode"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HxPosed.GUI.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DeveloperMode"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml">
    <Grid>
        <ui:CardExpander Icon="{ui:SymbolIcon SlideSettings24}" IsExpanded="False" ExpandDirection="Down" >
            <ui:CardExpander.Header>
                <StackPanel>
                    <ui:TextBlock
                                        Margin="0"
                                        FontTypography="BodyStrong"
                                        Text="Manage hxposed driver"
                                        TextWrapping="WrapWithOverflow" />
                    <ui:TextBlock
                                        Appearance="Secondary"
                                        Text="Possible actions."
                                        TextWrapping="WrapWithOverflow" />
                </StackPanel>
            </ui:CardExpander.Header>

            <ui:CardControl Padding="20,10,20,10" Header="Load Driver" Icon="{ui:SymbolIcon CalendarAssistant24}">
                <ui:DropDownButton 
                                HorizontalContentAlignment="Left"
                    Content="Choose method" Icon="{ui:SymbolIcon CubeQuick16}">
                    <ui:DropDownButton.Flyout>
                        <ContextMenu>
                            <ui:MenuItem Header="Service" Click="MenuItem_Click"/>
                            <ui:MenuItem Header="Bootkit" Click="MenuItem_Click_1"/>
                        </ContextMenu>
                    </ui:DropDownButton.Flyout>
                </ui:DropDownButton>
            </ui:CardControl>
        </ui:CardExpander>
    </Grid>
</Page>
