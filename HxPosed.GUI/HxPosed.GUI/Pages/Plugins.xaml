<Page x:Class="HxPosed.GUI.Pages.Plugins"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HxPosed.GUI.Pages"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:pl="clr-namespace:HxPosed.Plugins;assembly=HxPosed.Plugins"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      xmlns:vm="clr-namespace:HxPosed.GUI.ViewModels"
      Title="Plugins">
    <Page.DataContext>
        <vm:PluginsViewModel/>
    </Page.DataContext>
    <Grid>
        <Grid Visibility="{Binding LoadingVisibility}">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Stretch" Margin="20">
                <ui:TextBlock Appearance="Primary" HorizontalAlignment="Center" Foreground="{ui:ThemeResource TextFillColorPrimaryBrush}">Just a moment...</ui:TextBlock>
                <ProgressBar IsIndeterminate="True"/>
            </StackPanel>
        </Grid>

        <Grid Visibility="{Binding MainVisibility}">
            <Grid.RowDefinitions>
                <RowDefinition Height="150"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="1">
                <ItemsControl Margin="20" ItemsSource="{Binding Plugins}" VerticalAlignment="Top">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <ui:CardExpander Margin="0,5,0,5" Icon="{Binding Icon}" IsExpanded="False">
                                <ui:CardExpander.Header>
                                    <StackPanel>
                                        <ui:TextBlock
      Margin="0"
      FontTypography="BodyStrong"
      Text="{Binding Plugin.Name}"
      TextWrapping="WrapWithOverflow" />
                                        <ui:TextBlock
      Appearance="Secondary"
      Text="{Binding Plugin.Description}"
      TextWrapping="WrapWithOverflow" />
                                    </StackPanel>
                                </ui:CardExpander.Header>
                            </ui:CardExpander>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="1">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Left">
                        <ui:TextBlock FontTypography="Title" Appearance="Secondary" Text="Welcome back"/>
                        <ui:TextBlock FontTypography="Subtitle" Appearance="Tertiary" Text="{Binding StatusText}"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Grid>

    </Grid>
</Page>
