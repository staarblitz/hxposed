<Page x:Class="HxPosed.GUI.Pages.Plugins"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HxPosed.GUI.Pages"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:ctrls="clr-namespace:HxPosed.GUI.Controls"
      xmlns:pl="clr-namespace:HxPosed.Plugins;assembly=HxPosed.Plugins"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      xmlns:vm="clr-namespace:HxPosed.GUI.ViewModels"
      Title="Plugins">
    <Page.DataContext>
        <vm:PluginsViewModel/>
    </Page.DataContext>
    <Grid>
        <Grid Visibility="{Binding LoadingVisibility}">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Stretch" Margin="20">
                <ui:TextBlock Appearance="Primary" HorizontalAlignment="Center" Foreground="{ui:ThemeResource TextFillColorPrimaryBrush}">Just a moment...</ui:TextBlock>
                <ProgressBar IsIndeterminate="True"/>
            </StackPanel>
        </Grid>

        <Grid Visibility="{Binding MainVisibility}">
            <Grid.RowDefinitions>
                <RowDefinition Height="150"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="1">
                <ItemsControl Margin="20" ItemsSource="{Binding Plugins}" VerticalAlignment="Top">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <ui:CardExpander Margin="0,5,0,5" Icon="{Binding Icon}" IsExpanded="False">
                                <ui:CardExpander.Header>
                                    <ctrls:CardControl Header="{Binding Plugin.Name}" Subtitle="{Binding Plugin.Description}"/>
                                </ui:CardExpander.Header>
                                <StackPanel>
                                    <ui:CardExpander Icon="{ui:SymbolIcon Eye24}">
                                        <ui:CardExpander.Header>
                                            <ctrls:CardControl Header="Permissions" Subtitle="Allow or deny permissions to system components."/>
                                        </ui:CardExpander.Header>
                                        <ItemsControl ItemsSource="{Binding PermissionEntries, Mode=OneWay}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <ui:CardControl>
                                                        <ui:CardControl.Header>
                                                            <ctrls:CardControl Header="{Binding Header}"
       Subtitle="{Binding Subtitle}" />
                                                        </ui:CardControl.Header>
                                                        <ui:ToggleSwitch IsChecked="{Binding IsEnabled, Mode=TwoWay}" />
                                                    </ui:CardControl>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </ui:CardExpander>
                                    <ui:CardControl Icon="{ui:SymbolIcon ArchiveSettings24}">
                                        <ui:CardControl.Header>
                                            <ctrls:CardControl Header="Operations" Subtitle="Decide what to do."/>
                                        </ui:CardControl.Header>
                                        <StackPanel Orientation="Horizontal">
                                            <ui:Button Margin="5" Content="Enable" Click="Button_Click"/>
                                            <ui:Button Margin="5" Content="Disable" Click="Button_Click"/>
                                            <ui:Button Margin="5" Content="Remove" Click="Button_Click"/>
                                            <ui:Button Margin="5" Content="Visit URL" Click="Button_Click_1"/>
                                        </StackPanel>
                                    </ui:CardControl>
                                </StackPanel>
                                
                            </ui:CardExpander>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="1">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Left">
                        <ui:TextBlock FontTypography="Title" Appearance="Secondary" Text="Welcome back"/>
                        <ui:TextBlock FontTypography="Subtitle" Appearance="Tertiary" Text="{Binding StatusText}"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Grid>

    </Grid>
</Page>
